{
  "compilerOptions": {
    "outDir": "./dist/",
    "baseUrl": "./src",
    "noImplicitAny": true,
    "sourceMap": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@core/*": [
        "core/*"
      ],
      "@modules/*": [
        "modules/*"
      ],
      "@store/*": [
        "store/*"
      ]
    }
  }
}